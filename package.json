{
  "name": "imperia",
  "main": "dist/index.js",
  "private": true,
  "version": "0.4.0",
  "packageManager": "yarn@3.5.1",
  "scripts": {
    "build": "yarn run-s rimraf compile",
    "compile": "yarn swc src -d dist",
    "compile:watch": "yarn swc src -d dist -w",
    "start": "node dist/index.js",
    "format": "prettier --write ./src",
    "check:format": "prettier --check ./src",
    "lint": "eslint src --ext ts --fix",
    "check:lint": "eslint src --ext ts",
    "rimraf": "rimraf ./dist/",
    "release": "release-it",
    "release:patch": "release-it patch",
    "release:minor": "release-it minor",
    "release:major": "release-it major",
    "prepare": "husky install .github/husky"
  },
  "dependencies": {
    "@prisma/client": "^4.12.0",
    "@sapphire/discord.js-utilities": "^6.0.5",
    "@sapphire/framework": "4.4.3",
    "@sapphire/plugin-logger": "^3.0.2",
    "@sapphire/plugin-subcommands": "^4.0.1",
    "@sapphire/plugin-utilities-store": "1.0.1",
    "@sapphire/result": "^2.6.1",
    "@sapphire/time-utilities": "^1.7.9",
    "@sapphire/utilities": "^3.11.1",
    "colorette": "^2.0.19",
    "dayjs": "^1.11.7",
    "discord.js": "^14.9.0",
    "dotenv": "^16.0.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.5.1",
    "@commitlint/config-conventional": "^17.4.4",
    "@release-it/conventional-changelog": "^5.1.1",
    "@swc/cli": "^0.1.62",
    "@swc/core": "^1.3.44",
    "@types/node": "^18.15.11",
    "@typescript-eslint/eslint-plugin": "^5.57.0",
    "@typescript-eslint/parser": "^5.57.0",
    "chokidar": "^3.5.3",
    "eslint": "^8.37.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.7",
    "prisma": "^4.12.0",
    "release-it": "^15.10.0",
    "rimraf": "^5.0.0",
    "typescript": "^5.0.4"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "plugins": [
      "@typescript-eslint",
      "prettier"
    ],
    "ignorePatterns": [
      "dist",
      "node_modules",
      ".yarn"
    ],
    "rules": {
      "@typescript-eslint/no-namespace": "off",
      "@typescript-eslint/ban-ts-comment": "off"
    }
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "tabWidth": 4,
    "bracketSpacing": true,
    "singleQuote": false,
    "arrowParens": "always",
    "quoteProps": "consistent",
    "printWidth": 120
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/aeviterna/imperia.git"
  },
  "author": {
    "name": "aeviterna",
    "url": "https://github.com/aeviterna"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "src/**/*.ts": [
      "yarn lint",
      "yarn format"
    ]
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release v${version}"
    },
    "npm": {
      "publish": false
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "infile": "CHANGELOG.md",
        "preset": {
          "name": "conventionalcommits",
          "types": [
            {
              "type": "feat",
              "section": "Features",
              "hidden": false
            },
            {
              "type": "fix",
              "section": "Bug Fixes",
              "hidden": false
            },
            {
              "type": "refactor",
              "section": "Code Refactoring",
              "hidden": false
            }
          ]
        }
      }
    }
  }
}
